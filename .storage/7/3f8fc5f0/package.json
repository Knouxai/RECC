{
  "name": "smart-video-studio",
  "version": "1.0.0",
  "description": "الاستوديو الذكي لإنتاج الفيديوهات بالذكاء الاصطناعي",
  "repository": {},
  "license": "UNLICENSED",
  "private": true,
  "packageManager": "pnpm@10.10.0",
  "scripts": {
    "dev": "remotion studio",
    "build": "remotion bundle --out-dir ./dist",
    "build-exe": "npm run build && node create-executable.js",
    "upgrade": "remotion upgrade",
    "lint": "eslint src && tsc",
    "start": "remotion studio",
    "preview": "remotion preview",
    "render": "remotion render"
  },
  "dependencies": {
    "@remotion/animated-emoji": "4.0.323",
    "@remotion/animation-utils": "4.0.323",
    "@remotion/cli": "^4.0.314",
    "@remotion/cloudrun": "4.0.323",
    "@remotion/enable-scss": "4.0.323",
    "@remotion/fonts": "4.0.323",
    "@remotion/gif": "4.0.323",
    "@remotion/google-fonts": "4.0.323",
    "@remotion/install-whisper-cpp": "4.0.323",
    "@remotion/paths": "4.0.323",
    "@remotion/player": "4.0.323",
    "@remotion/tailwind-v4": "^4.0.314",
    "@remotion/zod-types": "^4.0.314",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "remotion": "^4.0.314",
    "tailwindcss": "^4.1.10",
    "zod": "3.22.3"
  },
  "devDependencies": {
    "@remotion/eslint-config-flat": "^4.0.314",
    "@types/react": "19.0.0",
    "@types/web": "0.0.166",
    "eslint": "9.19.0",
    "prettier": "3.3.3",
    "typescript": "5.5.4",
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "sideEffects": [
    "*.css"
  ],
  "main": "dist/index.html",
  "homepage": "./",
  "build": {
    "appId": "com.smartvideostudio.app",
    "productName": "الاستوديو الذكي للفيديو",
    "directories": {
      "output": "build-exe"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
